<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eQuipMobile.AssignAssetsPage"
             Title="Assign Assets">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button x:Name="PropertyPass" Text="Property Pass" TextColor="Black" BackgroundColor="#FFD222"  Margin="0,90,0,30" Clicked="Button_Clicked"  WidthRequest="200"/>
            <Button x:Name="AssignPerson" Text="Assign to person" TextColor="White" BackgroundColor="#3F2BB1"  Margin="0,0,0,30" Clicked="Button_Clicked_1"  WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>